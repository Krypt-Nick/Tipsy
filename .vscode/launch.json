{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Streamlit App",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "${workspaceFolder}/app.py"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Pygame Interface",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/interface.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Pygame Interface (700x700 Debug)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/interface.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FULL_SCREEN": "false",
                "WINDOW_WIDTH": "700",
                "WINDOW_HEIGHT": "700",
                "DEBUG": "true"
            }
        },
        {
            "name": "Run Pump Controller",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/controller.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Main Launcher",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Tests (Pytest)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["${workspaceFolder}/tests"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
} 